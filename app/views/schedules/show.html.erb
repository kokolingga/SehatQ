<h1>Doctor Booking</h1>

<p>
  <strong>Name:</strong>
  <%= @doctor.name %>
</p>

<p>
  <strong>Hospital:</strong>
  <%= @doctor.hospital.name %>
</p>

<table class="table table-striped table-responsive-md btn-table">
  <thead>
    <tr>
      <th>Schedule ID</th>
      <th>Start</th>
      <th>End</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @schedule.id %></td>
        <td><%= @schedule.date_start %></td>
        <td><%= @schedule.date_end %></td>
      </tr>
  </tbody>
</table>

<h3>Booking List</h3>
<table class="table table-striped table-responsive-md btn-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Booked at</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.patient_name %></td>
        <td><%= booking.email %></td>
        <td><%= booking.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Booking Form</h3>
<%= render 'booking', booking: @booking %>